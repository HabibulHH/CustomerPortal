@model CustomerPortal.Models.DailySales
@{
    ViewBag.Title = "DailySalesEntry";
}

<h2>Daily Sales Entry</h2>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div class="container" style="margin-top: 50px">
            @if (ViewBag.msg != null)
            {
                @ViewBag.msg
            }
            @using (@Html.BeginForm("EditSales", "Sales", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <div class="form-group">
                    @Html.LabelFor(m => m.SalesDate)<br />
                    @Html.EditorFor(model => model.SalesDate, new { @class = "form-control", @Value = Model.SalesDate })
                    @Html.ValidationMessageFor(m => m.SalesDate)
                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.Total)
                    @Html.TextBoxFor(m => m.Total, new { @class = "form-control", @Value = Model.Total })
                    @Html.ValidationMessageFor(m => m.Total)
                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.OnCashSale)
                    @Html.TextBoxFor(m => m.OnCashSale, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.OnCashSale)
                </div>

                <div class="form-group">

                    @Html.LabelFor(m => m.OnDueSale)
                    @Html.TextBoxFor(m => m.OnDueSale, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.OnDueSale)
                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.Collection)
                    @Html.TextBoxFor(m => m.Collection, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Collection)
                </div>
                <input type="hidden" name="Id" id="Id" value="@Model.Id">

                <input type="submit" class="btn btn-success" id="save" value="Save" name="save" />
            }
        </div>
    </div>
</div>


@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });

        });
    </script>

}  