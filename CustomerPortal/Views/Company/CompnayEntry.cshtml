@model CustomerPortal.Models.Compnay
@{
    ViewBag.Title = "Company Entry";
}

<h2>Company Entry</h2>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div class="container" style="margin-top: 50px">
            @if (ViewBag.msg != null)
            {
                @ViewBag.msg
            }
            @using (@Html.BeginForm("CompnayEntry", "Company", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <div class="form-group">
                    @Html.LabelFor(m => m.CompanyName)<br />
                    @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CompanyName)
                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.MobileNumber)
                    @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.MobileNumber)
                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.BakiAmount)
                    @Html.TextBoxFor(m => m.BakiAmount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BakiAmount)
                </div>

                 <input type="submit" class="btn btn-success" id="save" value="Save" name="save" />
            }
        </div>
    </div>
</div>


@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });

        });
    </script>

}  