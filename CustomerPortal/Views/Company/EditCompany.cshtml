@model CustomerPortal.Models.Compnay
@{
    ViewBag.Title = "Company Entry";
}

<h2>Company Entry</h2>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div class="container" style="margin-top: 50px">
            @if (ViewBag.msg != null)
            {
                @ViewBag.msg
            }
            @using (@Html.BeginForm("EditCompany", "Company", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <div class="form-group">
                    @Html.LabelFor(m => m.CompanyName)<br/>
                    @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control",@Value = @Model.CompanyName })
                    @Html.ValidationMessageFor(m => m.CompanyName)
                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.MobileNumber)
                    @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", @Value = @Model.MobileNumber})
                    @Html.ValidationMessageFor(m => m.MobileNumber)
                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.BakiAmount)
                    @Html.TextBoxFor(m => m.BakiAmount, new { @class = "form-control",@Value = @Model.BakiAmount })
                    @Html.ValidationMessageFor(m => m.BakiAmount)
                </div>
                <input type="hidden" name="Id" id="Id" value="@Model.Id">
                <input type="submit" class="btn btn-success" id="save" value="Save" name="save" />
            }
        </div>
    </div>
</div>
