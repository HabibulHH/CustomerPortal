@model CustomerPortal.Models.CustomerPaymentViewModel

@{
    ViewBag.Title = "CustoemerPayment";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div class="container" style="margin-top: 50px">
            @if (ViewBag.msg != null)
            {
                @ViewBag.msg
            }
            @using (@Html.BeginForm("CustoemerPayment", "Customer", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label for="Customer_Table_Id">Customer Id</label>
                    @Html.DropDownListFor(m => m.Payment.PayingCustomerId,
                         new SelectList(Model.Customer, "CustomerID", "CustomerID"), "Select Customer ID",
                        new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Payment.PayingCustomerId)
                </div>

                <div class="form-group">

                    @Html.LabelFor(m => m.Payment.Amount)
                    @Html.TextBoxFor(m => m.Payment.Amount, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Payment.Amount)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Payment.PaymentDate)<br/>
                    @Html.EditorFor(model => model.Payment.PaymentDate, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Payment.PaymentDate)
                </div>

                <input type="submit" class="btn btn-success" id="save" value="Save" name="save"/>
            }
        </div>
    </div>
</div>


@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });

        });
    </script>

}  